{
  "name": "mmv",
  "version": "2.0.0",
  "private": true,
  "description": "Matty's Mobile Valeting - Hugo static site with Cypress tests",
  "scripts": {
    "build": "hugo --minify",
    "preview": "npm run build && python3 -m http.server -d public 3000",
    "serve": "hugo server --disableFastRender --bind 0.0.0.0",
    "cypress:run": "percy exec -- cypress run --browser chrome --headless",
    "cypress:open": "CYPRESS_BASE_URL=http://localhost:1313 cypress open",
    "cypress:ci": "npx start-server-and-test serve http://localhost:1313 cypress:run",
    "test": "npm run cypress:ci"
  },
  "devDependencies": {
    "@percy/cli": "^1.0.0-beta.70",
    "@percy/cypress": "^3.1.1",
    "cypress": "^10.3.0",
    "cypress-audit": "^1.1.0",
    "lighthouse": "^9.2.0",
    "start-server-and-test": "^1.14.0"
  }
}
